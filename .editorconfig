root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120
indent_style = tab

# Prevent IDEA from translating *.{kt,kts} -> *.{kt, kts}. This confuses ktlint.
# @formatter:off
[*.{kt,kts}]
# @formatter:on
indent_style = space
indent_size = 4

[*.md]
max_line_length = 80

# @formatter:off
[*.{json,xml,yaml,yml}]
# @formatter:on
indent_style = space
indent_size = 2
